<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.vehicletyreread.Tyre"
		table="tyres">
		<meta attribute="class-attribute">
			these class contains tyres details.
		</meta>

		<id name="tyId" type="int" column="tyid" />

		<property name="tyCompany" column="tcomp" type="string" />
		<property name="tyCount" column="tcount" type="int" />
	</class>
</hibernate-mapping>